<AspectLibrary>
    <Name>Metalama.Extensions.DependencyInjection</Name>
    <Kind>Package</Kind>
    <Categories>
        <Category>Dependency Injection</Category>
    </Categories>
    <Author>PostSharp Technologies</Author>
    <Quality>Supported</Quality>
    <License>MIT</License>
