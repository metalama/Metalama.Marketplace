<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<AspectLibrary>
    <Name>Metalama.Patterns.Wpf</Name>
    <Kind>Package</Kind>
    <Categories>
        <Category>XAML</Category>
    </Categories>
    <Author>PostSharp Technologies</Author>
    <Quality>Certified</Quality>
    <License>MIT</License>
    <SourceUrl>https://github.com/postsharp/Metalama.Patterns/tree/HEAD/src/Metalama.Patterns.Wpf</SourceUrl>
    <PackageUrl>https://www.nuget.org/packages/Metalama.Patterns.Wpf</PackageUrl>
    <DocumentationUrl>https://doc.postsharp.net/metalama/patterns/wpf</DocumentationUrl>
    <Summary>
        Implements WPF dependency properties and commands without boilerplate code.
    </Summary>
    <Keywords>
        <Keyword>dependency</Keyword>
        <Keyword>property</Keyword>
        <Keyword>command</Keyword>
    </Keywords>
    <AspectGroups>
        <AspectGroup>
            <Name>Aspects</Name>
            <Aspects>
                <Aspect>
                    <Name>Command</Name>
                    <DocumentationUrl>https://doc.postsharp.net/metalama/patterns/wpf/command</DocumentationUrl>
                    <Description>Generates a Wpf command property from an Execute method and, optionally, a CanExecute property. </Description>
                </Aspect>
                <Aspect>
                    <Name>DependencyProperty</Name>
                    <DocumentationUrl>https://doc.postsharp.net/metalama/patterns/wpf/dependency-property</DocumentationUrl>
                    <Description>Turns a plain C# automatic property into a XAML dependency property. </Description>
                </Aspect>
            </Aspects>
        </AspectGroup>
    </AspectGroups>
    
</AspectLibrary>